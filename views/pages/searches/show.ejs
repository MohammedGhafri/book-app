<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/styles/reset.css">
    <link rel="stylesheet" href="/styles/layout.css">
    <link rel="stylesheet" href="/styles/base.css">
    <link rel="stylesheet" href="/styles/modules.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">



</head>
<body>
    <header></header>
<main>
    <section id="sectionShow">
        <% bookData.forEach(item=> { %>
        <div>
            <img src='<%=item.image%>' alt="">
            <p>
                <%=item.title %>
            </p>
<span>
    <%=item.authors %>
</span>
<button id="showMore">Show More</button>
<article>
    <p>
    <%=item.description %>
</p>
<p>
    <%=item.ISBN %>
</p>
</article>

        </div>
        <button class="selectButton">Select This Book</button>
        <form class="selectForm"action="/select" method="POST">
            <label for="">
                <span>Image</span><input type="text" name="image" value="<%=item.image%>"></label>
                <label for="">
                    <span>
                        Title
                    </span><input type="text" name="title" value="<%=item.title %>"></label>
                    <label for=""><span>
                        Auther
                    </span><input type="text" name="auther" value="<%=item.authors %>"></label>
                    <textarea name="description" id="" cols="30" rows="10"> <%=item.description %></textarea>
                    <label for=""><span>
                        ISBN
                    </span><input type="text" name="isbn" value="<%=item.ISBN %>"></label>
                    <label for=""><span>
                        Enter Book Shelf :
                    </span><input type="text" name="shelf" value=""></label>
                    <button>Add to List</button>
                    
                </form>
                <% }) %>
            </section>
        <section>
        <i class="fa fa-facebook" aria-hidden="true"></i>
        <i class="fa fa-twitter" aria-hidden="true"></i>
    </section>
</main>

<footer></footer>

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="/app.js"></script>
</body>
</html>