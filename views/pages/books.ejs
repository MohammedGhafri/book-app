        <form class="updatefrom"action="/update/<%=bookdetails.id%>?_method=put" method="POST">
            <label for="">
                <span>Image</span><input type="text" name="image" value="<%=bookdetails.img %>"></label>
                <label for="">
                    <span>
                        Title
                    </span><input type="text" name="title" value="<%=bookdetails.title %>"></label>
                    <label for=""><span>
                        Auther
                    </span><input type="text" name="auther" value="<%=bookdetails.auther %>"></label>
                    <label for="">
                        <span>
                            Text Description
                        </span>
                       <textarea name="description" id="" cols="30" rows="10">
                        <%=bookdetails.description %>
                    </textarea> 
                    </label>
                    
                    <label for=""><span>
                        ISBN
                    </span><input type="text" name="isbn" value="<%=bookdetails.isbn %>"></label>
                    <label for=""><span>
                        Enter Book Shelf :
                    </span><input type="text" name="shelf" value="<%=bookdetails.bookshelf%>"></label>
                    <button>Update</button>
                    
                </form>
    </main>
