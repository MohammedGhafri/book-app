    <main>

        <div>

            
        <img src="<%=bookdetails.img %>" alt="">
        <h2>
            <%= bookdetails.title %>
        </h2>
        <h2>
            <%=bookdetails.auther%>
        </h2>

        <p>
            <%=bookdetails.description %>
        </p>
        <p>
            <%=bookdetails.isbn%>
        </p>
        <p>
            <%=bookdetails.bookshelf%>
